(* Recursive bisection *)

recursive_bisection(f, endpoint1, endpoint2, tolerance, curr_iteration, max_iterations) :
     if (curr_iteration <= max_iterations) {
        new c = (endpoint1 + endpoint2) / 2 in
        if  (f(c) == 0 or (endpoint2 - endpoint1)/2 <= tolerance) {
			     print_string(c)
		    } else {
          curr_iteration := curr_iteration + 1;
          recursive_bisection(f, c, endpoint2, tolerance, curr_iteration, max_iterations)
        }
     }
